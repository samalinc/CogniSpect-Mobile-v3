<?xml version="1.0" encoding="utf-8"?>

<local:TestItemsPageBase xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CSMobile.Presentation.Views.Pages;assembly=CSMobile.Presentation.Views"
             x:Class="CSMobile.Presentation.Views.Pages.TestItemsPage"
             x:Name="TestItemsPageBase"
             NavigationPage.HasNavigationBar="False">
    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="3"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackLayout Grid.Column="1" Spacing="1">
            <ListView
                    ItemsSource="{Binding Tests}"
                    HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Spacing="-2">
                                    <Button Text="{Binding Name}" Command="{Binding Path=BindingContext.OnTestStartedCommand, Source={x:Reference Name=TestItemsPageBase}}" CommandParameter="{Binding .}"/>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </Grid>
</local:TestItemsPageBase>